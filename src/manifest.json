{
  "name": "Blazing Tabs",
  "description": "Search and switch your tabs blazingly fast",
  "icons": { "16": "logo16.png",
             "48": "logo48.png",
            "128": "logo128.png" },
  "version": "0.0.1",
  "background": { "scripts": ["background.js"] },
  "permissions": ["tabs", "storage"],
  "browser_action": {
      "default_title": "Click to open the tab search"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+E",
        "mac": "Ctrl+E",
        "chromeos": "Ctrl+E",
        "linux": "Ctrl+E"
      }
    }
  }
}
